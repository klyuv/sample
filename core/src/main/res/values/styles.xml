<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldText" parent="TextViewStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldText.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldText.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BoldText.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryDarkText" parent="TextViewStyle">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="PrimaryDarkText.15sp">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WeeksDayTextStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText" parent="TextViewStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteText" parent="TextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WhiteText.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteText.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>


    <style name="RoundedImageView10percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalRoundedStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>

    <style name="AppModalRoundedStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_with_top_bright_corners_and_stroke</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item> <!-- true - закрывает видимость статус бара, false - оставляет -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/TextInputEditTextAccentCursor</item>
    </style>

    <style name="TextInputEditTextAccentCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
    </style>

    <style name="colorControlHighlightWhite">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="SwitchStyle" parent="android:Widget.Material.CompoundButton.Switch">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="CheckBoxStyle" parent="android:Widget.Material.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/jetbrains_mono</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">ltr</item>
    </style>

</resources>